{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "versionType",
      "description": "Select version type to update",
      "default": "patch",
      "type": "pickString",
      "options": ["patch", "minor", "major", "prerelease"]
    }
  ],
  "tasks": [
    {
      "type": "shell",
      "command": "devcontainer up --workspace-folder .",
      "problemMatcher": [],
      "label": "Dev Container: up",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "showReuseMessage": false
      },
      "detail": "Create and start Dev Container using devcontainer CLI"
    },
    {
      "type": "shell",
      "command": "devcontainer exec --workspace-folder . npm test",
      "group": "test",
      "problemMatcher": [],
      "label": "Dev Container: test",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "showReuseMessage": false
      },
      "detail": "Run tests inside Dev Container via devcontainer exec"
    },
    {
      "type": "shell",
      "command": "devcontainer exec --workspace-folder . npm run build",
      "group": "build",
      "problemMatcher": [],
      "label": "Dev Container: build",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "showReuseMessage": false
      },
      "detail": "Build project inside Dev Container via devcontainer exec"
    },
    {
      "type": "shell",
      "command": "devcontainer exec --workspace-folder . npm run coverage",
      "group": "test",
      "problemMatcher": [],
      "label": "Dev Container: coverage",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "showReuseMessage": false
      },
      "detail": "Run test coverage inside Dev Container via devcontainer exec"
    },
    {
      "type": "shell",
      "command": "devcontainer exec --workspace-folder . npm run pre-commit",
      "group": "build",
      "problemMatcher": [],
      "label": "Dev Container: pre-commit",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "showReuseMessage": false
      },
      "detail": "Run pre-commit formatting inside Dev Container via devcontainer exec"
    },
    {
      "type": "shell",
      "command": "devcontainer exec --workspace-folder . npm run pre-push",
      "group": "test",
      "problemMatcher": [],
      "label": "Dev Container: pre-push",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "showReuseMessage": false
      },
      "detail": "Run pre-push validation (build, test, biome ci) inside Dev Container via devcontainer exec"
    },
    {
      "type": "shell",
      "command": "devcontainer exec --workspace-folder . npm version ${input:versionType} --no-git-tag-version --ignore-scripts",
      "group": "build",
      "problemMatcher": [],
      "label": "Dev Container: version (prompt)",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "showReuseMessage": false
      },
      "detail": "Update version in package.json and package-lock.json without Git commit/tag inside Dev Container (with user prompt)"
    }
  ]
}
