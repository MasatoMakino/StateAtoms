{
  "name": "@masatomakino/state-atoms",
  "version": "0.2.1",
  "description": "StateAtoms is a lightweight state management library for TypeScript.",
  "type": "module",
  "exports": {
    ".": {
      "types": "./esm/index.d.ts",
      "default": "./esm/index.js"
    }
  },
  "types": "./esm/index.d.ts",
  "files": [
    "esm"
  ],
  "scripts": {
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "build": "tsc",
    "pre-commit": "npx biome format --write --no-errors-on-unmatched --files-ignore-unknown=true .",
    "pre-push": "npm run build -- --noEmit && npx vitest --run && npx biome ci ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MasatoMakino/StateAtoms.git"
  },
  "author": "MasatoMakino <makino.masato.g@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MasatoMakino/StateAtoms/issues"
  },
  "homepage": "https://github.com/MasatoMakino/StateAtoms#readme",
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@vitest/coverage-istanbul": "^3.0.1",
    "eventemitter3": "^5.0.1",
    "fast-equals": "^5.0.1",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "eventemitter3": "^5.0.1",
    "fast-equals": "^5.0.1"
  },
  "optionalDependencies": {
    "@esbuild/linux-x64": "0.25.10",
    "@rollup/rollup-linux-x64-gnu": "4.43.0"
  }
}
